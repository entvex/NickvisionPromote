<syncfusion:RibbonWindow x:Class="NickvisionPromote.Views.SettingsDialog"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                         xmlns:local="clr-namespace:NickvisionPromote.Views"
                         mc:Ignorable="d" Title="Settings" Icon="../Resources/icon.ico" Office2010Icon="../Resources/icon.png"
                         Width="500" Height="440" ShowHelpButton="False" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
                         Loaded="Dialog_Loaded">
    <StackPanel>
        <syncfusion:PropertyGrid Name="PropertyGrid" Margin="0,4,0,0" Width="480" Height="320" ButtonPanelVisibility="Collapsed" UpdateSourceMode="Immediately" ValueChanged="PropertyGrid_ValueChanged"/>
        
        <TextBlock Margin="6,4,6,0" Text="An application restart is required to apply a theme change."/>
        
        <Button Margin="6,6,6,6" Height="30" Content="Close" Click="BtnClose"/>
    </StackPanel>
</syncfusion:RibbonWindow>
